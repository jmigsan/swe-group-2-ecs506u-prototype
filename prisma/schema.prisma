generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../sqlite.db"
}

model User {
  firstName  String
  email      String    @id
  password   String
  role       String
  staff      Staff?
  investor   Investor? @relation(fields: [investorId], references: [id])
  investorId String?
}

model Staff {
  userId String @id @unique
  user   User   @relation(fields: [userId], references: [email])
}

model Investor {
  id        String     @id @default(uuid())
  email     String     @unique
  friends   Investor[] @relation("FriendsRelation")
  friendsOf Investor[] @relation("FriendsRelation")
  User      User[]
}
