generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model users{
  firstName String
  email String  @id
  password String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt

  // one-to-many relationship with the Ticket
    tickets   Ticket[]
}

model Ticket {
  id               Int      @id @default(autoincrement())
  issueType        String
  otherIssueType   String
  issueDescription String
  dateCreated      DateTime @default(now())
  solved           Boolean  @default(false)

  // Define a many-to-one relationship with the User model
  user             users     @relation(fields: [userEmail], references: [email])
  userEmail        String      // Foreign key referencing the User model's id field
}
